<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contentRootView"
    tools:context="newscircle.protoplus.com.newscircle.newscircle.MainContent"
    >
    <include
        android:id="@+id/main_content_toolbar"
        layout="@layout/toolbar"
        ></include>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_layout"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:text="@string/error_massage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_ErrorTextstr"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/content_Retry"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp30"
            android:text="@string/error_button"
            android:textSize="@dimen/dp12"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:background="@drawable/shape"
            android:layout_below="@+id/content_ErrorTextstr"
            android:layout_centerHorizontal="true"
            >
        </android.support.v7.widget.AppCompatButton>

    </RelativeLayout>
    <com.protoplus.newscircle.Util.CircularProgressBar
        android:id="@+id/imageLoader"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="invisible"
        android:layout_width="@dimen/progressbar_width"
        android:layout_height="@dimen/progressbar_height"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:cpb_color="#FFee44"
        app:cpb_rotation_speed="1.0"
        app:cpb_sweep_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_min_sweep_angle="10"
        app:cpb_max_sweep_angle="300"
        app:cpb_colors="@array/gplus_colors"
        ></com.protoplus.newscircle.Util.CircularProgressBar>
    <ScrollView
        android:id="@+id/content_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_content_toolbar"
        android:scrollbars="none"
        android:layout_margin="@dimen/dp2"
        android:layout_above="@+id/share"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mainImage"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp250"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/dp2"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginRight="@dimen/dp2"
                android:layout_marginBottom="@dimen/dp2"
                />

            <TextView
                android:id="@+id/contentTitle"
                android:textSize="@dimen/dp22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainImage"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                 />

            <TextView
                android:id="@+id/pubDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contentTitle"
                android:textSize="@dimen/dp12"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mainDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp16"
                android:textColor="@android:color/black"
                android:textColorLink="#0066cc"
                android:layout_below="@+id/pubDate"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10" />
            <include layout="@layout/adcontentlistview_item"
                android:id="@+id/adcontentlistview_item_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/mainDescription"
                ></include>
            <include layout="@layout/adinstalllistview_item"
                android:id="@+id/adinstalllistview_item_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/mainDescription"
                ></include>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mainDescription1"
                android:layout_below="@+id/mainDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp16"
                android:textColor="@android:color/black"
                android:textColorLink="#0066cc"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10" />

        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginBottom="@dimen/dp14"
        android:layout_marginTop="@dimen/dp5"
        android:alpha="0.2"
        android:background="@android:color/black"
        android:layout_above="@+id/link"
        android:id="@+id/divider"
        android:orientation="horizontal"
        />
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/link"
        android:layout_above="@+id/contentadLayout"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp16"
        >
        <ImageView
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:src="@drawable/more"
            android:id="@+id/more"
            android:layout_marginTop="@dimen/dp1"
            android:layout_marginBottom="@dimen/dp1"
            android:layout_marginRight="@dimen/dp10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/more"
            android:text="More at"
            android:textSize="@dimen/dp10"
            android:textColor="@android:color/black"
            android:id="@+id/more_at"
            android:layout_centerVertical="true"
            />
        <!--android:textColor="@android:color/black"
        android:textStyle="bold"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/more_at"
            android:textSize="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp2"
            android:text="this is sample"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:id="@+id/more_at_text"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>
    <!-- TODO issue http://stackoverflow.com/questions/31003506/how-to-remove-border-shadow-from-lollipop-buttons-->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/share"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp30"
        android:text="@string/share"
        android:textSize="@dimen/dp12"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:layout_marginRight="@dimen/dp30"
        android:background="@drawable/shape"
        android:layout_marginBottom="@dimen/dp38"
        android:layout_above="@+id/contentadLayout"
        android:layout_alignParentRight="true"
        >
    </android.support.v7.widget.AppCompatButton>
    <com.appodeal.ads.BannerView
        android:id="@+id/contentadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        />
    <!--<com.google.android.gms.ads.AdView
        android:id="@+id/contentadLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-50dp"
        ads:adSize="BANNER"
        android:visibility="visible"
        >
        &lt;!&ndash;ads:adUnitId="@string/banner_ad_unit_id"&ndash;&gt;
    </com.google.android.gms.ads.AdView>-->
</RelativeLayout>